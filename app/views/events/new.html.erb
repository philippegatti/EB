<div class="container-fluid">
  <div class="row no-gutter">
    <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>
    <div class="col-md-8 col-lg-6">
      <div class="login d-flex align-items-center py-5">
        <div class="container">
          <div class="row">
            <div class="col-md-9 col-lg-8 mx-auto">
                <br/>
                <%= form_tag url_for(action: 'create'), method: "post" do %>
                <%= label_tag "Nom de l'évenement :" %>
                <div class="form-label-group">
                	<%= text_field_tag 'title', value = nil, options = {style:"height:30px;width:300px"} %>
                </div>
                <%= label_tag "Date (YYYY-MM-DD) : " %>
                <div class="form-label-group">
                	<%= text_field_tag 'start_date', value = nil, options = {style:"height:30px;width:300px"} %>
                </div>
                <%= label_tag "Durée (en minutes):" %>
                <div class="form-label-group">
                	<%= text_field_tag 'duration', value = nil, options = {style:"height:30px;width:300px;"} %>
                </div>
                <%= label_tag "Description :" %>
                <div class="form-label-group">
                	<%= text_field_tag 'description', value = nil, options = {style:"height:30px;width:300px"} %>
                </div>
                <%= label_tag "Prix :" %>
                <div class="form-label-group">
                	<%= text_field_tag 'price', value = nil, options = {style:"height:30px;width:300px"} %>
                </div>
                <%= label_tag "Lieu :" %>
                <div class="form-label-group">
                	<%= text_field_tag 'location', value = nil, options = {style:"height:30px;width:300px"} %>
                </div>
                <%= submit_tag "Soumettre", class: 'btn btn-lg btn-danger btn-block btn-login text-uppercase font-weight-bold mb-2'  %>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>