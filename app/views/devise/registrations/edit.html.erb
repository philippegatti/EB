<div class="container-fluid">
  <div class="row no-gutter">
    <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>
    <div class="col-md-8 col-lg-6">
      <div class="login d-flex align-items-center py-5">
        <div class="container">
          <div class="row">
            <div class="col-md-9 col-lg-8 mx-auto">
                <br/>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <%= f.label :PrÃ©nom %>
                <div class="form-label-group">
                  <%= f.text_field :first_name%>
                </div>
                <%= f.label :Nom %>
                <div class="form-label-group">
                  <%= f.text_field :last_name%>
                </div>
                  <%= f.label :email %>
                <div class="form-label-group">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>
                </div>
                  <%= f.label :Description %>
                <div class="form-label-group">
                  <%= f.text_field :description%>
                </div>
                  <%= f.label :password %><i>(leave blank if you don't want to change it)</i>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %>
                <div class="form-label-group">
                  <%= f.password_field :password, autocomplete: "new-password" %>
                </div>
                  <%= f.label :password_confirmation %>
                <div class="form-label-group">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                </div>
                  <%= f.label :current_password %><i>(we need your current password to confirm your changes)</i>
                <div class="form-label-group">
                  <%= f.password_field :current_password, autocomplete: "current-password" %>
                </div>
                <%= f.submit "Update", class:"btn btn-lg btn-danger btn-block btn-login text-uppercase font-weight-bold mb-2" %>
                <% end %>
                <a class="btn btn-lg btn-info btn-block btn-login text-uppercase font-weight-bold mb-2" <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




